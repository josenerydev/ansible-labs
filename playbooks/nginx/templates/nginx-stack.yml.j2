services:
  nginx:
    image: nginx:alpine
    ports:
      - target: 80
        published: 80
        protocol: tcp
        mode: host
    volumes:
      - "nginx/nginx.conf:/etc/nginx/nginx.conf"
      - "nginx/default.conf:/etc/nginx/conf.d/default.conf"
    networks:
      - webnet
    deploy:
      mode: global
      placement:
        constraints: [node.role == manager]


networks:
  webnet:
    external: true
